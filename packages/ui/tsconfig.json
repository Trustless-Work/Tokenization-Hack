{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2019",
    "baseUrl": "src",
    "skipLibCheck": true,
    "incremental": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
